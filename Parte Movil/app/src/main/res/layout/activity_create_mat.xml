<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wilson.examenMovilesEstumat2Bim.CreateMatActivity">


    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="582dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492">

        <TextView
            android:id="@+id/txtView_nombre_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editText_nombre_mat"
            android:layout_marginStart="22dp"
            android:text="Nombre"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtView_codigo_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText_codigo_mat"
            android:layout_alignStart="@+id/txtView_nombre_mat"
            android:text="CÃ³digo"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtView_fecha_mat"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText_fecha_mat"
            android:layout_alignStart="@+id/txtView_nombre_mat"
            android:text="Fecha Creacion"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_numerohoras_mat_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText_horas_mat"
            android:layout_alignStart="@+id/txtView_nombre_mat"
            android:text="Horas"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_desc_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText_desc_mat"
            android:layout_alignStart="@+id/txtView_nombre_mat"
            android:text="Descripcion"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editText_nombre_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="152dp"
            android:layout_toEndOf="@+id/txtView_fecha_mat"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_codigo_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="211dp"
            android:layout_toEndOf="@+id/txtView_fecha_mat"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_horas_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="197dp"
            android:layout_toEndOf="@+id/txtView_fecha_mat"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_fecha_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/editText_nombre_mat"
            android:layout_marginBottom="255dp"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/editText_desc_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="139dp"
            android:layout_toEndOf="@+id/txtView_fecha_mat"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_guardar_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:text="Registrar" />

        <ImageView
            android:id="@+id/imgView_foto_mat"
            android:layout_width="99dp"
            android:layout_height="101dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="101dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/btn_tomar_foto"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="79dp"
            app:srcCompat="@mipmap/foto_icon" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Materia"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

</android.support.constraint.ConstraintLayout>